{
	"log": {
		"level": "info"
	},
	"http": {
		"enabled": true,
		"listen": "%%GATEWAY_HTTP%%"
	},
	"rpc": {
		"enabled": true,
		"listen": "%%GATEWAY_RPC%%"
	},
	"socket": {
		"enabled": true,
		"listen": "%%GATEWAY_SOCKET%%",
		"timeout": 3600
	},
	"transfer": {
		"enabled": true,
		"batch": 200,
		"retry": 1,
		"connect_timeout": 1000,
		"execute_timeout": 5000,
		"max_connections": 32,
		"max_idle": 32,
		"cluster": {
			"t1": "%%TRANSFER_RPC%%"
		}
	},
	"pfc": {
		"hostname": "127.0.0.1",
		"step": 5,
		"tags": "service=gateway",
		"bases": [
			"debug",
			"runtime"
		],
		"push": {
			"enabled": true,
			"api": "http://127.0.0.1:6050/api/push"
		},
		"http": {
			"enabled": true,
			"listen": "0.0.0.0:2015"
		}
	}
}
